{
  "name": "t0mmy742/trailing-slash-middleware",
  "type": "library",
  "description": "A PSR-15 middleware to remove trailing slash in URI",
  "keywords": [
    "trailing",
    "slash",
    "middleware",
    "PSR-15"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Thomas LE BERRE",
      "email": "t0mmy742@users.noreply.github.com"
    }
  ],
  "require": {
    "php": "^7.2",
    "psr/http-factory": "^1.0",
    "psr/http-server-middleware": "^1.0"
  },
  "require-dev": {
    "phpstan/phpstan": "^0.12.4",
    "phpunit/phpunit": "^8.5",
    "squizlabs/php_codesniffer": "^3.5"
  },
  "config": {
    "sort-packages": true
  },
  "autoload": {
    "psr-4": {
      "t0mmy742\\Middleware\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "t0mmy742\\Tests\\Middleware\\": "tests"
    }
  },
  "minimum-stability": "stable",
  "scripts": {
    "test": [
      "@phpunit",
      "@phpcs",
      "@phpstan"
    ],
    "phpunit": "phpunit",
    "phpcs": "phpcs",
    "phpstan": "phpstan analyse src --memory-limit=-1"
  }
}
